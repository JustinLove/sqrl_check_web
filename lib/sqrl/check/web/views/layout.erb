<html>
  <head>
    <title>SQRL::Check::Web <%= title %></title>
    <style type="text/css">
    .result .title { font-weight: normal; }
    table {
      border-width: 0;
      border-style: none;
      border-color: #0000ff;
      border-collapse: collapse;
    }
    td {
      border-width: 0; 
      border-style: none;
      border-color: #0000ff; 
      border-collapse: collapse; 
      padding: 0; 
      margin: 0; 
      width: 5px; 
      height: 5px; 
    }
    td.black { background-color: #000; }
    td.white { background-color: #fff; }
    </style>
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
      <% if logged_in? %>
        <div>
          <%= printable_idk %>
          <form method="post" action="/logout">
            <input type="submit" value="log out">
          </form>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
